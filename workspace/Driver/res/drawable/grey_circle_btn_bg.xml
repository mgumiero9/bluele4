<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <size android:height="74dp" android:width="74dp"/>
            <solid android:color="@color/grey_btn_bg_sel"/>
            <padding android:bottom="@dimen/btn_padding_horiz"
                     android:top="@dimen/btn_padding_horiz"
                     android:left="@dimen/btn_padding_horiz"
                     android:right="@dimen/btn_padding_horiz"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval">
            <size android:height="70dp" android:width="70dp"/>
            <solid android:color="@color/grey_btn_bg"/>
            <stroke android:color="@color/grey_btn_bg_sel" android:width="1dp"/>
            <padding android:bottom="@dimen/btn_padding_horiz"
                     android:top="@dimen/btn_padding_horiz"
                     android:left="@dimen/btn_padding_horiz"
                     android:right="@dimen/btn_padding_horiz"/>
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <size android:height="70dp" android:width="70dp"/>
            <solid android:color="@color/grey_btn_bg"/>
            <padding android:bottom="@dimen/btn_padding_horiz"
                     android:top="@dimen/btn_padding_horiz"
                     android:left="@dimen/btn_padding_horiz"
                     android:right="@dimen/btn_padding_horiz"/>
        </shape>
    </item>
</selector>