package com.example.driver;

import android.content.Context;
import android.view.LayoutInflater;
import android.view.View;
import android.widget.ArrayAdapter;
import android.widget.TextView;

public class DeviceAdapter extends ArrayAdapter<String> {
	  private final Context context;
	  private final String[] texts;
	  private final int[] values1;
	  private final int[] values2;

	  public DeviceAdapter(Context context, String[] texts, int[] values1, int[] values2) {
	    super(context, R.layout.list_line, texts);
	    this.context = context;
	    this.texts = texts;
	    this.values2 = values2;
	    this.values1 = values1;
	  }

	  @Override
	  public View getView(int position, View convertView, ViewGroup parent) {
	    LayoutInflater inflater = (LayoutInflater) context
	        .getSystemService(Context.LAYOUT_INFLATER_SERVICE);
	    View rowView = inflater.inflate(R.layout.list_line, parent, false);
	    TextView txtName = (TextView) rowView.findViewById(R.id.deviceName);
	    TextView txtAddress = (TextView) rowView.findViewById(R.id.deviceAddress);
	    TextView txtValue1 = (TextView) rowView.findViewById(R.id.value1);
	    TextView txtValue2 = (TextView) rowView.findViewById(R.id.value2);
	    textAddress.setText(texts[position].substring(0, 17));
	    textName.setText(texts[position].substring(17));
	    textValue1.setText(values1[position]);
	    textValue2.setText(values1[position]);
	    // change the icon for Windows and iPhone
	    String s = values[position];
	    if (s.startsWith("iPhone")) {
	      imageView.setImageResource(R.drawable.no);
	    } else {
	      imageView.setImageResource(R.drawable.ok);
	    }

	    return rowView;
	  }
}
